<%- include('partials/header') %>

    <div class="container py-5">
        <div class="text-center mb-5">
            <h1 class="page-title display-4 fw-bold" data-aos="fade-down">
                <%= t.donate_title %>
            </h1>
            <p class="lead text-muted col-md-8 mx-auto" data-aos="fade-up" data-aos-delay="100">
                <%= t.donate_quote %>
            </p>
        </div>

        <div class="row justify-content-center mt-5">
            <div class="col-md-5 mb-4" data-aos="flip-right">
                <div class="card shadow-lg border-0 h-100 text-center">
                    <div class="card-header bg-success text-white py-3">
                        <h3 class="mb-0">
                            <%= t.upi_donation %>
                        </h3>
                    </div>
                    <div class="card-body p-5">
                        <p class="card-text mb-4">
                            <%= t.upi_text %>
                        </p>

                        <div class="qr-container p-3 border rounded d-inline-block mb-3 bg-white shadow-sm">
                            <!-- Placeholder QR Code -->
                            <img src="<%= donate.upiQr %>" alt="UPI QR Code" class="img-fluid">
                        </div>

                        <h5 class="fw-bold mt-2">UPI ID: <span class="text-success selection-all">
                                <%= donate.upiId %>
                            </span></h5>
                    </div>
                </div>
            </div>

            <div class="col-md-5 mb-4" data-aos="flip-left">
                <div class="card shadow-lg border-0 h-100">
                    <div class="card-header bg-primary text-white py-3 text-center">
                        <h3 class="mb-0">
                            <%= t.bank_transfer %>
                        </h3>
                    </div>
                    <div class="card-body p-5">
                        <p class="card-text text-center mb-4">
                            <%= t.bank_text %>
                        </p>

                        <div class="bg-light p-4 rounded border">
                            <div class="mb-3">
                                <label class="small text-muted text-uppercase fw-bold">
                                    <%= t.account_name %>
                                </label>
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">
                                        <%= donate.bankName %>
                                    </h5>
                                    <i class="fas fa-copy text-primary" style="cursor: pointer;" title="Copy"></i>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="small text-muted text-uppercase fw-bold">
                                    <%= t.account_number %>
                                </label>
                                <h5 class="mb-0">
                                    <%= donate.accNo %>
                                </h5>
                            </div>
                            <div class="mb-3">
                                <label class="small text-muted text-uppercase fw-bold">
                                    <%= t.ifsc_code %>
                                </label>
                                <h5 class="mb-0">
                                    <%= donate.ifsc %>
                                </h5>
                            </div>
                            <div class="mb-0">
                                <label class="small text-muted text-uppercase fw-bold">
                                    <%= t.branch %>
                                </label>
                                <h5 class="mb-0">
                                    <%= donate.branch %>
                                </h5>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>