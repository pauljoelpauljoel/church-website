<%- include('partials/header') %>

    <div class="container py-5">
        <h1 class="page-title text-center w-100 mb-5" data-aos="fade-down">
            <%= t.contact_title %>
        </h1>

        <div class="row mt-4">
            <div class="col-md-6 mb-4" data-aos="fade-right">
                <div class="card shadow-lg border-0 h-100">
                    <div class="card-body p-4">
                        <h3 class="card-title mb-4">
                            <%= t.send_message %>
                        </h3>
                        <form onsubmit="sendWhatsAppMessage(event)">
                            <div class="mb-3">
                                <label for="name" class="form-label">
                                    <%= t.form_name %>
                                </label>
                                <input type="text" class="form-control bg-light border-0 py-2" id="name"
                                    placeholder="<%= t.form_name %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">
                                    <%= t.form_email %>
                                </label>
                                <input type="email" class="form-control bg-light border-0 py-2" id="email"
                                    placeholder="name@example.com" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">
                                    <%= t.form_message %>
                                </label>
                                <textarea class="form-control bg-light border-0" id="message" rows="5"
                                    placeholder="<%= t.form_message %>" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-success w-100 py-2 fw-bold">
                                <i class="fab fa-whatsapp me-2"></i>
                                <%= t.btn_send %>
                            </button>
                        </form>

                        <script>
                            function sendWhatsAppMessage(event) {
                                event.preventDefault();

                                const name = document.getElementById('name').value;
                                const email = document.getElementById('email').value;
                                const message = document.getElementById('message').value;

                                const phoneNumber = "<%= contact.whatsappPhone %>";

                                const text = `*New Contact Message form Church Website*%0a%0a` +
                                    `*Name:* ${name}%0a` +
                                    `*Email:* ${email}%0a` +
                                    `*Message:*%0a${message}`;

                                const whatsappUrl = `https://wa.me/${phoneNumber}?text=${text}`;

                                window.open(whatsappUrl, '_blank');
                            }
                        </script>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4" data-aos="fade-left">
                <div class="card bg-light text-dark border-0 h-100 shadow-sm">
                    <div class="card-body p-5">
                        <h3 class="mb-4 text-dark">
                            <%= t.get_in_touch %>
                        </h3>
                        <div class="mb-4 d-flex align-items-start">
                            <i class="fas fa-map-marker-alt fa-2x me-3 text-primary"></i>
                            <div>
                                <h5 class="fw-bold text-dark">
                                    <%= t.church_location %>
                                </h5>
                                <p class="mb-0 text-muted">
                                    <%= contact.address %>
                                </p>
                            </div>
                        </div>
                        <div class="mb-4 d-flex align-items-start">
                            <i class="fas fa-phone-alt fa-2x me-3 text-primary"></i>
                            <div>
                                <h5 class="fw-bold text-dark">
                                    <%= t.phone %>
                                </h5>
                                <p class="mb-0 text-muted">
                                    <a href="tel:<%= contact.phone.replace(/\s+/g, '') %>"
                                        class="text-decoration-none text-muted">
                                        <%= contact.phone %>
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="mb-4 d-flex align-items-start">
                            <i class="fas fa-envelope fa-2x me-3 text-primary"></i>
                            <div>
                                <h5 class="fw-bold text-dark">
                                    <%= t.form_email %>
                                </h5>
                                <p class="mb-0 text-muted">
                                    <%= contact.email %>
                                </p>
                            </div>
                        </div>
                        <div class="mb-4 d-flex align-items-start">
                            <i class="fas fa-clock fa-2x me-3 text-primary"></i>
                            <div>
                                <h5 class="fw-bold text-dark">
                                    <%= t.office_hours %>
                                </h5>
                                <p class="mb-0 text-muted">
                                    <%= contact.officeHours %>
                                </p>
                            </div>
                        </div>

                        <!-- Call Us Button -->
                        <a href="tel:<%= contact.phone.replace(/\s+/g, '') %>"
                            class="btn btn-warning w-100 py-2 fw-bold mt-3 text-dark">
                            <i class="fas fa-phone-alt me-2"></i>
                            <%= t.call_us %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid p-0 mt-4" data-aos="fade-in" data-aos-delay="200">
        <!-- Google Map Embed -->
        <div style="width: 100%;">
            <iframe src="<%= contact.mapUrl %>" width="100%" height="450" style="border:0;" allowfullscreen=""
                loading="lazy" referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </div>

    <%- include('partials/footer') %>