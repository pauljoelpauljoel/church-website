<%- include('partials/header') %>

    <div class="container py-4">
        <h1 class="page-title text-center w-100 mb-5" data-aos="fade-down">
            <%= t.sermons_title %>
        </h1>

        <div class="row justify-content-center mb-5">
            <div class="col-md-8" data-aos="fade-up">
                <div class="input-group shadow-sm">
                    <input type="text" class="form-control form-control-lg border-0"
                        placeholder="<%= t.search_placeholder %>">
                    <button class="btn btn-primary px-4" type="button"><i class="fas fa-search"></i>
                        <%= t.search_btn %>
                    </button>
                </div>
            </div>
        </div>

        <div class="row">
            <% sermons.forEach((sermon, index)=> { %>
                <div class="col-md-12 mb-4" data-aos="fade-left" data-aos-delay="<%= index * 100 %>">
                    <div class="card shadow border-0 overflow-hidden">
                        <div class="card-body p-0">
                            <div class="row g-0">
                                <div class="col-md-4 position-relative">
                                    <!-- Placeholder for video thumbnail -->
                                    <div class="bg-dark text-white d-flex align-items-center justify-content-center h-100"
                                        style="min-height: 200px;">
                                        <i class="fab fa-youtube fa-4x text-danger opacity-75"></i>
                                    </div>
                                    <span
                                        class="position-absolute bottom-0 start-0 bg-primary text-white px-2 py-1 small m-2 rounded">Video</span>
                                </div>
                                <div class="col-md-8">
                                    <div class="p-4">
                                        <h3 class="card-title fw-bold">
                                            <%= sermon.title %>
                                        </h3>
                                        <div class="mb-2 text-muted">
                                            <i class="fas fa-user-tie me-2"></i>
                                            <%= sermon.preacher %>
                                                <span class="mx-2">|</span>
                                                <i class="far fa-calendar-alt me-2"></i>
                                                <%= sermon.date %>
                                        </div>
                                        <p class="card-text lead fs-6">
                                            <%= sermon.description %>
                                        </p>
                                        <div class="mt-3">
                                            <a href="<%= sermon.videoUrl %>" target="_blank"
                                                class="btn btn-danger me-2"><i class="fas fa-play me-1"></i>
                                                <%= t.watch_video %>
                                            </a>
                                            <a href="<%= sermon.audioUrl %>" class="btn btn-outline-primary"><i
                                                    class="fas fa-headphones me-1"></i>
                                                <%= t.listen_audio %>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <%- include('partials/footer') %>