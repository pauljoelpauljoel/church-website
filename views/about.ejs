<%- include('partials/header') %>

    <div class="container py-5">
        <div class="text-center mb-5">
            <h1 class="page-title display-4 fw-bold" data-aos="fade-down">
                <%= about.title %>
            </h1>
            <p class="lead text-muted" data-aos="fade-up" data-aos-delay="100">
                <%= about.lead %>
            </p>
        </div>

        <!-- Vision & Mission -->
        <div class="row mb-5">
            <div class="col-md-6 mb-4" data-aos="fade-right">
                <div class="card h-100 border-0 shadow-lg bg-light">
                    <div class="card-body p-5">
                        <div class="mb-3 text-primary"><i class="fas fa-eye fa-3x"></i></div>
                        <h3 class="card-title fw-bold">
                            <%= about.visionTitle %>
                        </h3>
                        <p class="card-text fs-5">
                            <%= about.visionText %>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4" data-aos="fade-left">
                <div class="card h-100 border-0 shadow-lg bg-light">
                    <div class="card-body p-5">
                        <div class="mb-3 text-secondary"><i class="fas fa-bullseye fa-3x"></i></div>
                        <h3 class="card-title fw-bold">
                            <%= about.missionTitle %>
                        </h3>
                        <p class="card-text fs-5">
                            <%= about.missionText %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-5" data-aos="zoom-in">

        <!-- Leadership Section -->
        <div class="mt-5">
            <h2 class="section-title text-center w-100 mb-5" data-aos="fade-up">
                <%= about.leadershipTitle %>
            </h2>
            <div class="row justify-content-center">
                <% team.forEach((member, index)=> { %>
                    <div class="col-md-4 text-center mb-4" data-aos="zoom-in" data-aos-delay="<%= 200 * (index + 1) %>">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <div class="mb-3">
                                    <img src="<%= member.image %>" class="rounded-circle shadow"
                                        alt="<%= member.name %>"
                                        style="width: 150px; height: 150px; object-fit: cover;">
                                </div>
                                <h4 class="card-title fw-bold text-primary">
                                    <%= member.name %>
                                </h4>
                                <p class="text-muted badge-custom d-inline-block text-white">
                                    <%= member.role %>
                                </p>
                                <p class="mt-3">"<%= member.quote %>"</p>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>