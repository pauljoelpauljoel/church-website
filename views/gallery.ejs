<%- include('partials/header') %>

    <div class="container py-5">
        <h1 class="page-title text-center w-100 mb-5" data-aos="fade-down">
            <%= t.gallery_title || t.gallery %>
        </h1>

        <!-- Category Filter Tabs -->
        <!-- Category Filter Tabs -->
        <ul class="nav nav-pills justify-content-center mb-5" id="galleryTabs" role="tablist" data-aos="fade-up">
            <% if(typeof categories !=='undefined' ) { %>
                <% categories.forEach((cat, index)=> { %>
                    <li class="nav-item m-1" role="presentation">
                        <button class="nav-link rounded-pill px-4 <%= index === 0 ? 'active' : '' %>"
                            id="<%= cat.name.replace(/\s+/g, '-').toLowerCase() %>-tab" data-bs-toggle="pill"
                            type="button" role="tab" onclick="filterGallery('<%= cat.name %>')">
                            <%= (currentLang==='ta' && cat.nameTa) ? cat.nameTa : (t[cat.name] || cat.name) %>
                        </button>
                    </li>
                    <% }) %>
                        <% } %>
        </ul>

        <div class="row mt-4" id="galleryGrid">
            <% gallery.forEach((item, index)=> { %>
                <div class="col-md-4 mb-4 gallery-item" data-category="<%= item.category || 'General' %>"
                    data-aos="zoom-in" data-aos-delay="<%= index * 100 %>">
                    <div class="card border-0 gallery-card position-relative overflow-hidden cursor-pointer"
                        data-bs-toggle="modal" data-bs-target="#galleryModal"
                        onclick="updateGalleryModal('<%= item.url %>', '<%= item.caption %>')">

                        <img src="<%= item.url %>" class="card-img rounded shadow-sm" alt="<%= item.caption %>"
                            style="height: 300px; object-fit: cover;">

                        <div
                            class="card-gallery-overlay d-flex flex-column align-items-center justify-content-center text-center p-3">
                            <i class="fas fa-search-plus fa-3x text-white mb-2"></i>
                            <p class="text-white fw-bold fs-5 mb-1">
                                <%= item.caption %>
                            </p>
                            <span class="badge bg-light text-primary rounded-pill small">
                                <% const catObj=categories.find(c=> c.name === (item.category || 'General')); %>
                                    <%= (currentLang==='ta' && catObj && catObj.nameTa) ? catObj.nameTa :
                                        (t[item.category || 'General' ] || item.category || 'General' ) %>
                            </span>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <!-- Gallery Modal -->
    <div class="modal fade" id="galleryModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content bg-transparent border-0">
                <div class="modal-body position-relative p-0 text-center">
                    <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-3 z-index-10"
                        data-bs-dismiss="modal" aria-label="Close"></button>
                    <img src="" id="modalImage" class="img-fluid rounded shadow-lg" alt="Gallery Image">
                    <div class="bg-white p-3 rounded-bottom text-center">
                        <h4 id="modalCaption" class="m-0 text-primary fw-bold"></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .cursor-pointer {
            cursor: pointer;
        }

        .gallery-card:hover .card-img {
            transform: scale(1.1);
            transition: transform 0.5s ease;
        }

        .card-gallery-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(26, 35, 126, 0.6);
            opacity: 0;
            transition: opacity 0.3s ease;
            backdrop-filter: blur(2px);
        }

        .gallery-card:hover .card-gallery-overlay {
            opacity: 1;
        }
    </style>

    <script>
        function updateGalleryModal(url, caption) {
            document.getElementById('modalImage').src = url;
            document.getElementById('modalCaption').innerText = caption;
        }

        function filterGallery(category) {
            const items = document.querySelectorAll('.gallery-item');

            items.forEach(item => {
                const itemCategory = item.getAttribute('data-category');

                if (itemCategory === category) {
                    item.style.display = 'block';
                    // Re-trigger AOS animation
                    item.classList.remove('aos-animate');
                    setTimeout(() => {
                        item.classList.add('aos-animate');
                    }, 50);
                } else {
                    item.style.display = 'none';
                }
            });
        }

        // Initialize with the first category on load
        document.addEventListener('DOMContentLoaded', () => {
            const firstTab = document.querySelector('#galleryTabs .nav-link.active');
            if (firstTab) {
                // Clean up the text content to get just the name
                const firstCategory = firstTab.innerText.trim();
                filterGallery(firstCategory);
            }
        });
    </script>

    <%- include('partials/footer') %>