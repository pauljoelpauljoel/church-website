<%- include('partials/header') %>

    <div class="container py-4">
        <h1 class="page-title text-center w-100 mb-5" data-aos="fade-down">
            <%= t.services_title %>
        </h1>

        <div class="row mt-4">
            <% services.forEach((service, index)=> { %>
                <div class="col-md-6 mb-4" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                    <div class="card h-100 shadow-sm border-warning border-start border-4">
                        <div class="card-body p-4">
                            <h4 class="card-title text-primary fw-bold mb-3"><i
                                    class="fas fa-praying-hands me-2 text-warning"></i>
                                <%= service.name %>
                            </h4>
                            <div class="d-flex mb-2">
                                <div class="me-4 text-muted"><i class="far fa-calendar-check me-2"></i>
                                    <%= service.day %>
                                </div>
                                <div class="text-muted"><i class="far fa-clock me-2"></i>
                                    <%= service.time %>
                                </div>
                            </div>
                            <p class="card-text text-secondary mb-0">
                                <i class="fas fa-map-marker-alt me-2 text-danger"></i>
                                <%= service.location %>
                            </p>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>

        <div class="alert alert-info mt-5 shadow-sm border-0 d-flex align-items-center" data-aos="zoom-in">
            <i class="fab fa-youtube fa-3x text-danger me-4"></i>
            <div>
                <h4 class="alert-heading fw-bold">
                    <%= t.join_online %>
                </h4>
                <p class="mb-0">
                    <%= t.online_text %>
                </p>
                <a href="#" class="btn btn-sm btn-danger mt-2">
                    <%= t.watch_live %>
                </a>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>