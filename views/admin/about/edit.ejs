<%- include('../../partials/header') %>
    <%- include('../../partials/translation_script') %>

        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="card shadow-sm">
                        <div class="card-header bg-white">
                            <h3 class="mb-0">Edit About Us Content</h3>
                        </div>
                        <div class="card-body">
                            <form action="/admin/about" method="POST">
                                <h5 class="text-primary mb-3">General Information</h5>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="title" class="form-label">Page Title (English)</label>
                                        <input type="text" class="form-control" id="title" name="title"
                                            value="<%= about.title || '' %>" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="titleTa" class="form-label">Page Title (Tamil)</label>
                                        <input type="text" class="form-control" id="titleTa" name="titleTa"
                                            value="<%= aboutTa.title || '' %>" placeholder="Translating...">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="lead" class="form-label">Lead Text (English)</label>
                                        <textarea class="form-control" id="lead" name="lead" rows="2"
                                            required><%= about.lead || '' %></textarea>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="leadTa" class="form-label">Lead Text (Tamil)</label>
                                        <textarea class="form-control" id="leadTa" name="leadTa" rows="2"
                                            placeholder="Translating..."><%= aboutTa.lead || '' %></textarea>
                                    </div>
                                </div>

                                <hr>

                                <h5 class="text-primary mb-3">Our Vision</h5>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="visionTitle" class="form-label">Vision Title (English)</label>
                                        <input type="text" class="form-control" id="visionTitle" name="visionTitle"
                                            value="<%= about.visionTitle || '' %>" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="visionTitleTa" class="form-label">Vision Title (Tamil)</label>
                                        <input type="text" class="form-control" id="visionTitleTa" name="visionTitleTa"
                                            value="<%= aboutTa.visionTitle || '' %>" placeholder="Translating...">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="visionText" class="form-label">Vision Text (English)</label>
                                        <textarea class="form-control" id="visionText" name="visionText" rows="3"
                                            required><%= about.visionText || '' %></textarea>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="visionTextTa" class="form-label">Vision Text (Tamil)</label>
                                        <textarea class="form-control" id="visionTextTa" name="visionTextTa" rows="3"
                                            placeholder="Translating..."><%= aboutTa.visionText || '' %></textarea>
                                    </div>
                                </div>

                                <hr>

                                <h5 class="text-primary mb-3">Our Mission</h5>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="missionTitle" class="form-label">Mission Title (English)</label>
                                        <input type="text" class="form-control" id="missionTitle" name="missionTitle"
                                            value="<%= about.missionTitle || '' %>" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="missionTitleTa" class="form-label">Mission Title (Tamil)</label>
                                        <input type="text" class="form-control" id="missionTitleTa"
                                            name="missionTitleTa" value="<%= aboutTa.missionTitle || '' %>"
                                            placeholder="Translating...">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="missionText" class="form-label">Mission Text (English)</label>
                                        <textarea class="form-control" id="missionText" name="missionText" rows="3"
                                            required><%= about.missionText || '' %></textarea>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="missionTextTa" class="form-label">Mission Text (Tamil)</label>
                                        <textarea class="form-control" id="missionTextTa" name="missionTextTa" rows="3"
                                            placeholder="Translating..."><%= aboutTa.missionText || '' %></textarea>
                                    </div>
                                </div>

                                <hr>

                                <h5 class="text-primary mb-3">Leadership Section Title</h5>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="leadershipTitle" class="form-label">Section Title (English)</label>
                                        <input type="text" class="form-control" id="leadershipTitle"
                                            name="leadershipTitle" value="<%= about.leadershipTitle || '' %>" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="leadershipTitleTa" class="form-label">Section Title (Tamil)</label>
                                        <input type="text" class="form-control" id="leadershipTitleTa"
                                            name="leadershipTitleTa" value="<%= aboutTa.leadershipTitle || '' %>"
                                            placeholder="Translating...">
                                    </div>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                    <a href="/admin/dashboard" class="btn btn-secondary">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            // Initialize Translation
            document.addEventListener('DOMContentLoaded', () => {
                setupTranslation('title', 'titleTa');
                setupTranslation('lead', 'leadTa');
                setupTranslation('visionTitle', 'visionTitleTa');
                setupTranslation('visionText', 'visionTextTa');
                setupTranslation('missionTitle', 'missionTitleTa');
                setupTranslation('missionText', 'missionTextTa');
                setupTranslation('leadershipTitle', 'leadershipTitleTa');
            });
        </script>

        <%- include('../../partials/footer') %>