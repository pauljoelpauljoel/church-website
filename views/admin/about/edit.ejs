<%- include('../../partials/header') %>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h3 class="mb-0">Edit About Us Content</h3>
                    </div>
                    <div class="card-body">
                        <form action="/admin/about" method="POST">
                            <h5 class="text-primary mb-3">General Information</h5>
                            <div class="mb-3">
                                <label for="title" class="form-label">Page Title</label>
                                <input type="text" class="form-control" id="title" name="title"
                                    value="<%= about.title || '' %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="lead" class="form-label">Lead Text</label>
                                <textarea class="form-control" id="lead" name="lead" rows="2"
                                    required><%= about.lead || '' %></textarea>
                            </div>

                            <hr>

                            <h5 class="text-primary mb-3">Our Vision</h5>
                            <div class="mb-3">
                                <label for="visionTitle" class="form-label">Vision Title</label>
                                <input type="text" class="form-control" id="visionTitle" name="visionTitle"
                                    value="<%= about.visionTitle || '' %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="visionText" class="form-label">Vision Text</label>
                                <textarea class="form-control" id="visionText" name="visionText" rows="3"
                                    required><%= about.visionText || '' %></textarea>
                            </div>

                            <hr>

                            <h5 class="text-primary mb-3">Our Mission</h5>
                            <div class="mb-3">
                                <label for="missionTitle" class="form-label">Mission Title</label>
                                <input type="text" class="form-control" id="missionTitle" name="missionTitle"
                                    value="<%= about.missionTitle || '' %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="missionText" class="form-label">Mission Text</label>
                                <textarea class="form-control" id="missionText" name="missionText" rows="3"
                                    required><%= about.missionText || '' %></textarea>
                            </div>

                            <hr>

                            <h5 class="text-primary mb-3">Leadership Section Title</h5>
                            <div class="mb-3">
                                <label for="leadershipTitle" class="form-label">Section Title</label>
                                <input type="text" class="form-control" id="leadershipTitle" name="leadershipTitle"
                                    value="<%= about.leadershipTitle || '' %>" required>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                <a href="/admin/dashboard" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>