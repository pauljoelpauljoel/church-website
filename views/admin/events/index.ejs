<%- include('../../partials/header') %>

    <div class="container mt-5">
        <h1>Manage Events</h1>
        <a href="/admin/dashboard" class="btn btn-secondary mb-3">&larr; Back to Dashboard</a>
        <a href="/admin/events/new" class="btn btn-success mb-3 float-end"><i class="fas fa-plus"></i> Add New Event</a>

        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(events.length> 0) { %>
                        <% events.forEach(event=> { %>
                            <tr>
                                <td><img src="<%= event.image %>" alt="img"
                                        style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;"></td>
                                <td class="fw-bold">
                                    <%= event.title %>
                                </td>
                                <td>
                                    <%= event.date %>
                                </td>
                                <td>
                                    <%= event.description.substring(0, 50) %>...
                                </td>
                                <td>
                                    <a href="/admin/events/<%= event.id %>/edit" class="btn btn-sm btn-primary"><i
                                            class="fas fa-edit"></i></a>
                                    <form action="/admin/events/<%= event.id %>?_method=DELETE" method="POST"
                                        class="d-inline" onsubmit="return confirm('Are you sure?');">
                                        <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center">No events found.</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../../partials/footer') %>