<%- include('../../partials/header') %>
    <%- include('../../partials/translation_script') %>

        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow-lg">
                        <div class="card-header bg-warning text-dark">
                            <h3 class="mb-0">Edit Event</h3>
                        </div>
                        <div class="card-body p-4">
                            <form action="/admin/events/<%= event.id %>?_method=PUT" method="POST"
                                enctype="multipart/form-data">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Event Title (English)</label>
                                        <input type="text" class="form-control" id="title" name="title"
                                            value="<%= event.title %>" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Event Title (Tamil)</label>
                                        <input type="text" class="form-control" id="titleTa" name="titleTa"
                                            value="<%= event.titleTa || '' %>" placeholder="Translating...">
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Date</label>
                                    <input type="text" class="form-control" name="date" value="<%= event.date %>"
                                        required>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Description (English)</label>
                                        <textarea class="form-control" id="description" name="description" rows="3"
                                            required><%= event.description %></textarea>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Description (Tamil)</label>
                                        <textarea class="form-control" id="descriptionTa" name="descriptionTa" rows="3"
                                            placeholder="Translating..."><%= event.descriptionTa || '' %></textarea>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Event Image</label>
                                    <% if(event.image) { %>
                                        <div class="mb-2">
                                            <img src="<%= event.image %>" alt="Current Image" style="height: 100px;">
                                        </div>
                                        <% } %>
                                            <input type="file" class="form-control" name="image" accept="image/*">
                                            <small class="text-muted">Leave blank to keep current image.</small>
                                </div>
                                <button type="submit" class="btn btn-warning">Update Event</button>
                                <a href="/admin/events" class="btn btn-secondary">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', () => {
                setupTranslation('title', 'titleTa');
                setupTranslation('description', 'descriptionTa');
            });
        </script>

        <%- include('../../partials/footer') %>