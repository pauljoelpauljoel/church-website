<%- include('../../partials/header') %>

    <div class="container mt-5">
        <h1>Manage Sermons</h1>
        <a href="/admin/dashboard" class="btn btn-secondary mb-3">&larr; Back to Dashboard</a>
        <a href="/admin/sermons/new" class="btn btn-primary mb-3 float-end"><i class="fas fa-plus"></i> Add New
            Sermon</a>

        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Preacher</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(sermons.length> 0) { %>
                        <% sermons.forEach(sermon=> { %>
                            <tr>
                                <td class="fw-bold">
                                    <%= sermon.title %>
                                </td>
                                <td>
                                    <%= sermon.preacher %>
                                </td>
                                <td>
                                    <%= sermon.date %>
                                </td>
                                <td>
                                    <a href="/admin/sermons/<%= sermon.id %>/edit" class="btn btn-sm btn-primary"><i
                                            class="fas fa-edit"></i></a>
                                    <form action="/admin/sermons/<%= sermon.id %>?_method=DELETE" method="POST"
                                        class="d-inline" onsubmit="return confirm('Are you sure?');">
                                        <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center">No sermons found.</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../../partials/footer') %>