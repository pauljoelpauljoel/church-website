<%- include('../../partials/header') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">Edit Contact Information</h3>
                    </div>
                    <div class="card-body">
                        <form action="/admin/contact" method="POST">
                            <div class="mb-3">
                                <label class="form-label">Church Address</label>
                                <textarea class="form-control" name="address" rows="3"
                                    required><%= contact.address %></textarea>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Phone Number</label>
                                    <input type="text" class="form-control" name="phone" value="<%= contact.phone %>"
                                        required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Email Address</label>
                                    <input type="email" class="form-control" name="email" value="<%= contact.email %>"
                                        required>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Office Hours</label>
                                <input type="text" class="form-control" name="officeHours"
                                    value="<%= contact.officeHours %>" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">WhatsApp Number (for API)</label>
                                <input type="text" class="form-control" name="whatsappPhone"
                                    value="<%= contact.whatsappPhone %>" required>
                                <small class="text-muted">Format: 919876543210 (Country code without +)</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Embed a map HTML src from Google Maps</label>
                                <textarea class="form-control" name="mapUrl" rows="3"
                                    required><%= contact.mapUrl %></textarea>
                                <small class="text-muted">Go to Google Maps -> Share -> Embed a map -> Copy HTML ->
                                    Extract the src="..." URL.</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Direct Google Maps Link (for Directions)</label>
                                <input type="text" class="form-control" name="mapLink"
                                    value="<%= contact.mapLink || '' %>" placeholder="https://maps.app.goo.gl/..."
                                    required>
                                <small class="text-muted">Use the "Share" link from Google Maps (Browser URL).</small>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg">Update Contact Info</button>
                                <a href="/admin/dashboard" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>