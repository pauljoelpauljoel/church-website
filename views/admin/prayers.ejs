<%- include('../partials/header') %>

    <div class="container mt-4">
        <h1>Prayer Requests</h1>
        <a href="/admin/dashboard" class="btn btn-secondary mb-3">&larr; Back to Dashboard</a>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Message</th>
                        <th>Type</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(prayers.length> 0) { %>
                        <% prayers.forEach(p=> { %>
                            <tr>
                                <td>
                                    <%= p.id %>
                                </td>
                                <td>
                                    <%= p.name %>
                                </td>
                                <td>
                                    <%= p.message %>
                                </td>
                                <td>
                                    <% if(p.confidential) { %>
                                        <span class="badge bg-danger">Confidential</span>
                                        <% } else { %>
                                            <span class="badge bg-success">Public</span>
                                            <% } %>
                                </td>
                                <td>
                                    <%= new Date(p.date).toLocaleDateString() %>
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a href="/admin/prayers/<%= p.id %>/edit" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form action="/admin/prayers/<%= p.id %>?_method=DELETE" method="POST"
                                            onsubmit="return confirm('Are you sure?');">
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center">No prayer requests found.</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../partials/footer') %>