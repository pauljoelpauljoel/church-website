<%- include('../partials/header') %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow mb-4">
                    <div class="card-header bg-dark text-white">
                        <h4 class="mb-0">Site Settings</h4>
                    </div>
                    <div class="card-body">
                        <form action="/admin/settings/site" method="POST">
                            <h5 class="mb-3">Live Stream</h5>
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" id="liveStreamEnabled"
                                    name="liveStreamEnabled" <% if(settings && settings.liveStreamEnabled) { %>checked<%
                                    } %>>
                                    <label class="form-check-label" for="liveStreamEnabled">Show "Join us Online" on
                                        Home Page</label>
                            </div>
                            <div class="mb-3">
                                <label for="liveStreamTitle" class="form-label">Title</label>
                                <input type="text" class="form-control" id="liveStreamTitle" name="liveStreamTitle"
                                    value="<%= (settings && settings.liveStreamTitle) ? settings.liveStreamTitle : 'Join us Online!' %>"
                                    placeholder="e.g. Join us Online!">
                            </div>
                            <div class="mb-3">
                                <label for="liveStreamText" class="form-label">Message</label>
                                <textarea class="form-control" id="liveStreamText" name="liveStreamText" rows="2"
                                    placeholder="e.g. Can't make it to church? Join our live stream..."><%= (settings && settings.liveStreamText) ? settings.liveStreamText : "Can't make it to church? Join our live stream service every Sunday at 10:30 AM." %></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="liveStreamLink" class="form-label">Live Stream Link</label>
                                <input type="text" class="form-control" id="liveStreamLink" name="liveStreamLink"
                                    value="<%= (settings && settings.liveStreamLink) ? settings.liveStreamLink : '#' %>"
                                    placeholder="https://youtube.com/...">
                            </div>
                            <button type="submit" class="btn btn-info w-100 text-white">Save Site Settings</button>
                        </form>
                    </div>
                </div>

                <div class="card shadow">
                    <div class="card-header bg-dark text-white">
                        <h4 class="mb-0">Admin Credentials</h4>
                    </div>
                    <div class="card-body">
                        <% if(error) { %>
                            <div class="alert alert-danger">
                                <%= error %>
                            </div>
                            <% } %>
                                <% if(success) { %>
                                    <div class="alert alert-success">
                                        <%= success %>
                                    </div>
                                    <% } %>

                                        <form action="/admin/settings" method="POST">
                                            <h5 class="mb-3">Change Password</h5>
                                            <p class="text-muted small">Verify your current credentials to make changes.
                                            </p>

                                            <div class="mb-3">
                                                <label for="currentUsername" class="form-label">Current Username</label>
                                                <input type="text" class="form-control" id="currentUsername"
                                                    name="currentUsername" required>
                                            </div>
                                            <div class="mb-3">
                                                <label for="currentPassword" class="form-label">Current Password</label>
                                                <input type="password" class="form-control" id="currentPassword"
                                                    name="currentPassword" required>
                                            </div>

                                            <hr>
                                            <p class="text-muted small">Enter new credentials.</p>

                                            <div class="mb-3">
                                                <label for="newUsername" class="form-label">New Username</label>
                                                <input type="text" class="form-control" id="newUsername"
                                                    name="newUsername" required>
                                            </div>
                                            <div class="mb-3">
                                                <label for="newPassword" class="form-label">New Password</label>
                                                <input type="password" class="form-control" id="newPassword"
                                                    name="newPassword" required>
                                            </div>

                                            <button type="submit" class="btn btn-primary w-100">Update
                                                Credentials</button>
                                        </form>
                                        <hr>
                                        <a href="/admin/dashboard" class="btn btn-secondary w-100">Back to Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>