<%- include('../../partials/header') %>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Manage Gallery</h1>
            <div>
                <a href="/admin/categories" class="btn btn-outline-primary me-2"><i class="fas fa-tags"></i> Manage
                    Categories</a>
                <a href="/admin/gallery/new" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Photo</a>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Image</th>
                                <th>Caption</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (gallery && gallery.length> 0) { %>
                                <% gallery.forEach(photo=> { %>
                                    <tr>
                                        <td>
                                            <img src="<%= photo.url %>" alt="<%= photo.caption %>"
                                                style="width: 80px; height: 60px; object-fit: cover;" class="rounded">
                                        </td>
                                        <td>
                                            <%= photo.caption %>
                                        </td>
                                        <td>
                                            <a href="/admin/gallery/<%= photo.id %>/edit"
                                                class="btn btn-warning btn-sm me-1">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <form action="/admin/gallery/<%= photo.id %>?_method=DELETE" method="POST"
                                                class="d-inline"
                                                onsubmit="return confirm('Are you sure you want to delete this photo?');">
                                                <button type="submit" class="btn btn-danger btn-sm"><i
                                                        class="fas fa-trash"></i> Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="3" class="text-center py-4">No photos found.</td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <a href="/admin/dashboard" class="btn btn-secondary">&larr; Back to Dashboard</a>
        </div>
    </div>

    <%- include('../../partials/footer') %>