<%- include('../../partials/header') %>
    <%- include('../../partials/translation_script') %>

        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow-lg">
                        <div class="card-header bg-warning text-dark">
                            <h3 class="mb-0">Edit Service</h3>
                        </div>
                        <div class="card-body p-4">
                            <form action="/admin/services/<%= service.id %>?_method=PUT" method="POST">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Service Name (English)</label>
                                        <input type="text" id="name" name="name" class="form-control"
                                            value="<%= service.name %>" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Service Name (Tamil)</label>
                                        <input type="text" id="nameTa" name="nameTa" class="form-control"
                                            value="<%= service.nameTa || '' %>" placeholder="Translating...">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Day (English)</label>
                                        <select id="day" name="day" class="form-select" required>
                                            <option value="Sunday" <%=service.day==='Sunday' ? 'selected' : '' %>>Sunday
                                            </option>
                                            <option value="Monday" <%=service.day==='Monday' ? 'selected' : '' %>>Monday
                                            </option>
                                            <option value="Tuesday" <%=service.day==='Tuesday' ? 'selected' : '' %>
                                                >Tuesday
                                            </option>
                                            <option value="Wednesday" <%=service.day==='Wednesday' ? 'selected' : '' %>
                                                >Wednesday</option>
                                            <option value="Thursday" <%=service.day==='Thursday' ? 'selected' : '' %>
                                                >Thursday
                                            </option>
                                            <option value="Friday" <%=service.day==='Friday' ? 'selected' : '' %>>Friday
                                            </option>
                                            <option value="Saturday" <%=service.day==='Saturday' ? 'selected' : '' %>
                                                >Saturday
                                            </option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Day (Tamil)</label>
                                        <input type="text" id="dayTa" name="dayTa" class="form-control"
                                            value="<%= service.dayTa || '' %>" placeholder="Translating...">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Time (English)</label>
                                        <input type="text" id="time" name="time" class="form-control"
                                            value="<%= service.time %>" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Time (Tamil)</label>
                                        <input type="text" id="timeTa" name="timeTa" class="form-control"
                                            value="<%= service.timeTa || '' %>" placeholder="Translating...">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Location (English)</label>
                                        <input type="text" id="location" name="location" class="form-control"
                                            value="<%= service.location %>" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Location (Tamil)</label>
                                        <input type="text" id="locationTa" name="locationTa" class="form-control"
                                            value="<%= service.locationTa || '' %>" placeholder="Translating...">
                                    </div>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-warning btn-lg">Update Service</button>
                                    <a href="/admin/services" class="btn btn-secondary">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', () => {
                setupTranslation('name', 'nameTa');
                setupTranslation('day', 'dayTa');
                setupTranslation('time', 'timeTa');
                setupTranslation('location', 'locationTa');
            });
        </script>

        <%- include('../../partials/footer') %>